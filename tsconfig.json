{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "noImplicitThis": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "lib"
  },
  "include": ["lib"],
  "exclude": ["dist"]
}
